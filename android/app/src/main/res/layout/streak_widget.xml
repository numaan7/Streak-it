<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Widget Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”¥ Streak it"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/streak_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 day"
            android:textColor="#FF6B35"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Today's Habits List -->
    <LinearLayout
        android:id="@+id/habits_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Habit 1 -->
        <LinearLayout
            android:id="@+id/habit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/habit_item_bg"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/habit_1_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="ðŸ’ª"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/habit_1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Morning Exercise"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/habit_1_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Habit 2 -->
        <LinearLayout
            android:id="@+id/habit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/habit_item_bg"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/habit_2_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="ðŸ“š"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/habit_2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reading"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/habit_2_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Habit 3 -->
        <LinearLayout
            android:id="@+id/habit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/habit_item_bg">

            <TextView
                android:id="@+id/habit_3_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="ðŸ’§"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/habit_3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Drink Water"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="12dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/habit_3_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Tap to open app hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap to open app"
        android:textColor="#999999"
        android:textSize="11sp"
        android:gravity="center"
        android:paddingTop="12dp" />

</LinearLayout>
